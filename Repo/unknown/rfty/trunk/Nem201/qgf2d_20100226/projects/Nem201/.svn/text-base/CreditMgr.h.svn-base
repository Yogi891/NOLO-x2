#ifndef _CREDITMGR_H_
#define _CREDITMGR_H_

class CreditMgr
{
public:
	//////////////////////////////////////////////////////////////////////////////////////
	//D'tor
	//////////////////////////////////////////////////////////////////////////////////////
	~CreditMgr();

	//////////////////////////////////////////////////////////////////////////////////////
	//Returns the singleton instance
	//////////////////////////////////////////////////////////////////////////////////////
	static CreditMgr& GetInstance();

	//////////////////////////////////////////////////////////////////////////////////////
	//Increases the number of current credits, a player is only allow 9 at max
	//////////////////////////////////////////////////////////////////////////////////////
	void AddCredit();

	//////////////////////////////////////////////////////////////////////////////////////
	//Lowers the credit the player has
	//////////////////////////////////////////////////////////////////////////////////////
	void LowerCredit();

	//////////////////////////////////////////////////////////////////////////////////////
	//Returns true if the number of credits is greater then 0
	//////////////////////////////////////////////////////////////////////////////////////
	bool HasCredit();

	//////////////////////////////////////////////////////////////////////////////////////
	//Checks for player input for credits
	//////////////////////////////////////////////////////////////////////////////////////
	void Check();

private:
	//////////////////////////////////////////////////////////////////////////////////////
	//C'tor
	//////////////////////////////////////////////////////////////////////////////////////
	CreditMgr();

	//
	//Singleton instance
	//
	static CreditMgr* m_pInstance;

	//
	//Holds how many credits the player currently has
	//
	unsigned short m_Credit;
};


#endif